
<div class="entry">
	<div class="span1 title_show"><h6><%=job.s_date.strftime("%m/%Y")%><%=job.e_date.strftime("- %m/%Y")%></h6></div>
	<div>
		<strong><%=job.institution%></strong>, <%=job.department%><br />
			<%=job.position%> <br />
			Lloc: <%=job.city%>, <%=job.country%><br />
			
				
			<% if @title=="Editar usuari" %>
				<%= button_to "Borrar", job, :method => :delete,  :title => "Eliminar #{job.job_type}" %>
				<%= link_to "Edita", edit_job_path(job), :class=>"btn btn-primary btn-small" %>
			<% end %>
			<%= link_to "Mira'n els detalls", job, :class=>"btn btn-primary btn-small" %>
	</div>
</div>
  	


