<div class="row">
    <div class="span8 offset2">
    <h2>Afegir estada a l'extranger</h2>

	<%= form_for(@job, :url => {:action=>"createabroad",:class=>"form-horizontal"}) do |f| %>
	    <%= render 'shared/error_messages', :object=>f.object %>
	    	 <fieldset>
	         <legend>Personal</legend>
	  <div class="field">
	    <%= f.label "Estada actual" %>
	    <%= f.check_box :current_job %><br />
	  </div>           
         <%=render 'jobs/e_date_form' %>
	 <%=render 'jobs/s_date_form' %>
	 	  <div class="field">
	    <%= f.label :país %>
	    <%= f.text_field :country %><br />
	  </div>
	  <div class="field">
	    <%= f.label :ciutat %>
	    <%= f.text_field :city %><br />
	  </div>
	  <div class="field">
	    <%= f.label :descripció %>
	    <%= f.text_area :content, :cols=>20, :rows=>6, :size=>60 %><br />
	  </div>
	  <div class="actions">
	    <%= f.submit "Create it" %>
	  </div>
	<% end %>
        <%= link_to "Cancelar", current_user, :class=>"btn btn-small" %>
	</div>
</div>
