<header>
  <%= link_to logo, root_path %>
  <nav class="round">
    <ul>
    <% if not signed_in? %>
      <li><%= link_to "Casa", root_path %></li>
    <% else %>
      <li><%= link_to "Directori", users_path %></li>
      <li><%= link_to "Perfil", current_user %></li>
      <li><%= link_to "Editar",edit_user_path(current_user) %></li>
      <% end %>
      <li><%= link_to "Ajuda", help_path %></li>
      <% if signed_in? %>
      <li><%= link_to "Sortir", signout_path, :method => :delete %></li>
      <% else %>
      <li><%= link_to "Entrar", signin_path %></li>
      <% end %>
    </ul>
  </nav>
</header>

