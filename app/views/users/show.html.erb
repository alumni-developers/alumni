<table class="profile" summary="Profile information">
  <tr>
    <td class="main">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>

    </td>
    <td class="sidebar round">
      <strong>Titulació</strong> <br /> <%= @user.degree %><br />
      <strong>Any Graduació</strong> <br /> <%= @user.year %><br />
      <strong>email</strong> <br /> <%= @user.email %><br />
    </td>
  </tr>
  <tr>
    <td class="sidebar round">
    <strong>Estades a l'extranger'</strong><br />
    <%= @user.abroad %>
    </td>
  </tr>
  <tr>
    <td class="sidebar round">
    <strong>Experiència Laboral</strong><br />
    <%= @user.work %>
    </td>
  </tr>
  <tr>
    <td class="sidebar round">
    <strong>Interessos</strong><br />
    <%= @user.likes %>
    </td>
  </tr>
  <tr>
    <td class="sidebar round">
    <strong>Perfil Linkedin</strong><br />
    <%= link_to "Veure perfil", @user.linkedin, :target => '_blank' %>
    </td>
  </tr>
</table>

