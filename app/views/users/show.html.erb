<table class="profile" summary="Profile information">
  <tr>
    <td class="main">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </td>
    <td class="sidebar round">
      <strong>Titulació</strong> <br /> <%= @user.degree %><br />
      <strong>Any Graduació</strong> <br /> <%= @user.year %>
    </td>
  </tr>
  <tr>
    <td class="sidebar round">
    <strong>Preferències</strong><br />
    <%= @user.likes %>
    </td>
  </tr>
</table>

