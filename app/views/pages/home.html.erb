
<div class="top-sep">
	<div class="well span5 offset1">
		<h1>Benvinguts!</h1>
		<%= image_tag "welcome-example.jpg", :class=>"img" %>
	</div>
	
	<div class="span3 well">
		<%= form_for(:session, :url => sessions_path, :class=>"well") do |f| %>
		   	<%= f.text_field :email, :class=> "input-clarge", :placeholder => 'e-mail' %>            
		    <table><tbody><tr>
		    	<td><%= f.password_field :password, :class=>"input-medium",  :placeholder => 'e-mail' %></td>
			   	<td><%= f.submit "Entrar" %></td>
			</tr></tbody></table>
			 <input type="checkbox" id="optionsCheckbox" value="option1">Recordar Contrsenya
		<% end %>	
	</div>
</div>
